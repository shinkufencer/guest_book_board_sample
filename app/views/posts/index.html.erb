<div class="container mx-auto px-1 divide-y divide-black divide-opacity-25">
  <% @posts.each do |post| %>
    <div class="py-3">
      <div class="font-bold">
        [<%= post.id %>]<%= post.title %> - <%= post.user.name %>さん [<a href="<%= edit_post_path(post.id) %>">編集</a>]
      </div>
      <div class="py-1">
        <%= simple_format(post.message) %>
      </div>
    </div>

  <% end %>
</div>

